<h1 align="center">Listing all articles</h1>
<div class="table-responsive">
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr>
        <th scope="row"><%= article.title %></td>
        <td><%= article.description %></td>
        <td>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-xs btn-primary" %>
          <%= link_to "Show", article_path(article), class: "btn btn-xs btn-info" %>
          <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure? "}, class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
