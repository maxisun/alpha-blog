<%= render "shared/errors", obj: @article%>

<%= form_with(model: @article, local: true) do | f |%>
    <div class="form-group row">
      <%= f.label :title, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
      </div>
    </div> 

    <div class="form-group row">
      <%= f.label :description, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_area :description, class: "form-control", placeholder: "Description of article" %>
      </div>
    </div> 

    <div class="form-group row">
      <div class="col-sm-10">
        <%= f.submit class: 'btn btn-primary '%>
      </div>
    </div> 

    <%= link_to "cancel and return", articles_path%>

  <% end %>