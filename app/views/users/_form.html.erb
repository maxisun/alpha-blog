<%= render "shared/errors", obj: @user %>

<%= form_with(model: @user, local: true) do | f |%>
  <div class="form-group row">
    <%= f.label :username, class: "col-sm-2 col-form-label"%>
      <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control", placeholder: "enter username", autofocus: true %>
      </div>
  </div> 

  <div class="form-group row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "enter email" %>
    </div>
  </div> 

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "enter password" %>
    </div>
  </div> 

  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account"  , class: 'btn btn-primary') %>
    </div>
  </div> 

  <%= link_to "cancel and return", articles_path%>
<% end %>